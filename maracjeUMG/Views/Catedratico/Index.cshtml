@model List<marcajeUMG.Models.Catedratico>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-8 card m-3">
        <div class="row card-header">
            <div class="col-8">
                <h1>Catedraticos</h1>
            </div>
            <div class="col-4">
                <a class="nav-link text-dark" asp-area="" asp-controller="Catedratico" asp-action="Crear">Nuevo</a>
            </div>
        </div>
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Telefono</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var catedratico in Model)
                    {
                        <tr>
                            <th scope="row">@catedratico.idCatedratico</th>
                            <td>@catedratico.Nombre</td>
                            <td>@catedratico.Telefono</td>
                            <td>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Catedratico" asp-action="Editar" asp-route-idMaestro="@catedratico.idCatedratico">Editar</a>
                            </td>
                            <td><a class="nav-link text-dark" asp-area="" asp-controller="Catedratico" asp-action="Eliminar" asp-route-idMaestro="@catedratico.idCatedratico">Eliminar</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
    </div>
</div>


